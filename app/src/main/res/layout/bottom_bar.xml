<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#00000000"
    android:layout_height="50dp">
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:id="@+id/bottom_more"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_width="25dp"
            android:id="@+id/bottom_more_iv"
            android:layout_gravity="center_horizontal"
            android:layout_height="25dp"
            android:background="@drawable/bottom_more"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_gravity="center_horizontal"
            android:text="发现"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:id="@+id/bottom_car"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/bottom_car_iv"
            android:layout_width="20dp"
            android:layout_height="31dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottom_car" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_gravity="center_horizontal"
            android:text="购书"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:id="@+id/bottom_impair"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/bottom_impair_iv"
            android:layout_width="23dp"
            android:layout_height="27dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:background="@drawable/bottom_impair" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:layout_gravity="center_horizontal"
            android:text="售后"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:id="@+id/bottom_mine"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <ImageView
            android:layout_width="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="25dp"
            android:id="@+id/bottom_mine_iv"
            android:background="@drawable/bottom_mine"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="我的"
            android:textSize="12dp" />
    </LinearLayout>
</LinearLayout>