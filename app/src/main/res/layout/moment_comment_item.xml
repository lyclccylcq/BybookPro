<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/comment_item_avatar"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user_avatar"/>
    <TextView
        android:layout_toRightOf="@id/comment_item_avatar"
        android:id="@+id/comment_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chenleely"
        android:layout_marginTop="30dp"
        android:textColor="@color/main_color"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/comment_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_item_avatar"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="这是评论内容\nx\nx"
        android:textColor="@color/main_color"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/moment_item_time"
        android:layout_width="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/comment_item_content"
        android:text="2022 4-16 19:00"
        android:textColor="@color/sub_color"
        android:textSize="14dp" />
    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="删除"
        android:id="@+id/comment_item_del"
        android:textSize="14dp"
        android:textColor="@color/sub_color"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:layout_marginRight="20dp"
        android:layout_below="@id/moment_item_time"/>
</RelativeLayout>