<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/comment_item_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_mine_avatar" />

    <TextView
        android:id="@+id/comment_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/comment_item_avatar"
        android:text="Bycar用户"
        android:textColor="@color/main_color"
        android:textSize="14dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:id="@+id/comment_item_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="10dp"
        android:text="评论内容....\n\n\n"
        android:layout_below="@id/comment_item_name"
        android:textColor="@color/main_color"
        android:textSize="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:id="@+id/comment_item_time"
        android:layout_marginLeft="60dp"
        android:text="2020 10"
        android:layout_marginTop="10dp"
        android:layout_below="@id/comment_item_content"
        android:textColor="@color/sub_color"
        android:textSize="14dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/tips_color"
        android:text="删除"
        android:layout_below="@id/comment_item_content"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        android:id="@+id/comment_item_del" />
    <TextView
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/sub_color"
        android:text="查看更多"
        android:id="@+id/comment_item_more"
        android:gravity="center"
        android:layout_below="@id/comment_item_del"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"/>
</RelativeLayout>