<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.Syufei.bybook.ui.ReleaseMessageactivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/release_back"
            android:layout_width="25dp"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_height="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="分享此刻"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/main_color"/>
        <TextView
            android:id="@+id/release_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:paddingRight="10dp"
            android:textSize="14dp"
            android:text="发布"
            android:textColor="@color/tips_color" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="200dp">
        <EditText
            android:id="@+id/release_edit"
            android:hint="这一刻的想法..."
            android:textSize="16dp"
            android:gravity="start"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="match_parent"/>
    </ScrollView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:layout_width="25dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/photo_ic"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/release_add_photo"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="1dp"
        android:background="@color/spin_color"/>
    <androidx.recyclerview.widget.RecyclerView
        android:scrollbars="none"
        android:layout_margin="10dp"
        android:id="@+id/release_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>