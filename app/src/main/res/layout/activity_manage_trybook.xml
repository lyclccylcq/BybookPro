<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/spin_color"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.Syufei.bybook.ui.ManageTryBookActivity">
    <include layout="@layout/common_top_bar"
        android:id="@+id/manage_try_car_top_bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/manage_try_car_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="筛选"
            android:textSize="16dp"
            android:gravity="end"
            android:textColor="@color/main_color"/>
        <ImageView
            android:id="@+id/manage_try_car_filter_ic"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:src="@drawable/filter_ic"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:id="@+id/manage_try_car_recycler"
        android:background="@drawable/round_bg_7"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/manage_try_car_neterror"
        android:layout_width="match_parent"
        android:textColor="@color/sub_color"
        android:textSize="16dp"
        android:gravity="center"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:text="网络出错了，点击此处刷新看看..."/>
</LinearLayout>