<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/choose_dialog_bg"
    android:layout_height="match_parent">
    <include layout="@layout/common_dialog_top"
        android:id="@+id/choose_city_top"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/choose_city_tip_tv1"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/main_color"
                android:layout_height="0dp"
                android:text="选择省份"/>
            <TextView
                android:layout_marginTop="50dp"
                android:id="@+id/choose_city_tip_tv2"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:textSize="16dp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/main_color"
                android:layout_height="0dp"
                android:text="选择城市"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/spin_color"/>
        <ListView
            android:layout_width="0dp"
            android:layout_weight="4"
            android:listSelector="@android:color/transparent"
            android:divider="@null"
            android:layout_height="match_parent"
            android:id="@+id/choose_city_recycler"/>
    </LinearLayout>

</LinearLayout>