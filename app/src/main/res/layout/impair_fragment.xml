<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/impair_frag_root"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/impair_frag_top_img"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:scaleType="centerCrop"
                android:src="@drawable/login_background" />

            <LinearLayout
                android:id="@+id/impair_frag_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/ic_mine_mybook" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  ByBook  Caring"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/impair_frag_top2"
                android:layout_below="@id/impair_frag_top"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/impair_frag_top_impair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退书"
                    android:textStyle="bold"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/impair_frag_top_caring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="换书"
                    android:textSize="14dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <TextView
                android:id="@+id/impair_frag_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="380dp"
                android:background="@drawable/round_bg_3"
                android:gravity="center"
                android:paddingLeft="50dp"
                android:paddingTop="10dp"
                android:paddingRight="50dp"
                android:paddingBottom="10dp"
                android:text="退换预约"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/impair_frag_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/impair_frag_top_img"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="历史订单"
                android:textColor="@color/main_color"
                android:textSize="20dp" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_below="@id/impair_frag_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/impair_frag_history_container"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:layout_marginBottom="40dp"
                android:textColor="@color/sub_color"
                android:text="查看更多"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:id="@+id/impair_frag_history_more"
                android:layout_below="@id/impair_frag_history_container"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>