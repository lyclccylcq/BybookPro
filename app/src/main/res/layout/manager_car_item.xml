<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/round_bg_7"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/manage_car_item_top_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/manage_book_book_ic"
        android:visibility="gone" />

    <TextView
        android:id="@+id/manage_car_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:text="雪国"
        android:textColor="@color/main_color"
        android:textSize="18dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/manage_car_item_img"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/manage_car_item_name"
        android:src="@drawable/xueguo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/manage_car_item_img"
        android:layout_below="@id/manage_car_item_name"
        android:id="@+id/manage_car_item_version"
        android:text="作者：川端康成"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/main_color"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/manage_car_item_img"
        android:layout_below="@id/manage_car_item_version"
        android:id="@+id/manage_car_item_price"
        android:text="价格：￥ 30.0"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/main_color"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/manage_car_item_img"
        android:layout_below="@id/manage_car_item_price"
        android:id="@+id/manage_car_item_des"
        android:text="描述：日本文学大奖获奖作品"
        android:textSize="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/main_color"/>

    <TextView
        android:id="@+id/manage_car_item_del"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/round_bg_4"
        android:gravity="center"
        android:text="删除书籍"
        android:layout_marginBottom="20dp"
        android:textColor="@color/tips_color"
        android:textSize="16dp" />
</RelativeLayout>