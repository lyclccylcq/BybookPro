<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textSize="14dp"-->
<!--        android:textColor="@color/sub_color"-->
<!--        android:text="查看更多"/>-->
</RelativeLayout>